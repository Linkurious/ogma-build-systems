{
  "name": "@linkurious/ogma-build-systems",
  "version": "0.0.1",
  "description": "Build system templates for Ogma.",
  "main": "index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "concurrently \"npm run build:vite\" \"npm run build:rollup\" \"npm run build:webpack\"",
    "build:vite": "cd vite && npm run build",
    "build:rollup": "cd rollup && npm run build",
    "build:webpack": "cd webpack && npm run build",
    "prepare": "concurrently \"npm run prepare:vite\" \"npm run prepare:rollup\" \"npm run prepare:webpack\"",
    "prepare:vite": "cd vite && npm i",
    "prepare:rollup": "cd rollup && npm i",
    "prepare:webpack": "cd webpack && npm i",
    "preprepare": "node scripts/prepare.js",
    "postprepare": "node scripts/cleanup.js",
    "postversion": "sync_versions"
  },
  "keywords": [
    "ogma",
    "webpack",
    "vite",
    "template"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@linkurious/code-tools": "^0.0.14",
    "concurrently": "^7.6.0"
  }
}
